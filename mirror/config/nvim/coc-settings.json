{
    "suggest.autoTrigger": "none",
    "languageserver": {
        "rust": {
            "command": "rust-analyzer",
            "filetypes": ["rust"],
            "rootPatterns": ["Cargo.toml"]
        },
        "python": {
            "command": "pyls",
            "args": [
                "-vv",
                "--log-file",
                "/tmp/lsp_python.log"
            ],
            "rootPatterns": [".flake8"],
            "trace.server": "verbose",
            "filetypes": [
                "python"
            ],
            "settings": {
                "pyls": {
                    "enable": true,
                    "configurationSources": ["flake8"],
                    "plugins": {
                        "pyflakes": {
                            "enabled": true
                        },
                        "pycodestyle": {
                            "enabled": true
                        }
                    }
                }
            }
        }
    }
}
